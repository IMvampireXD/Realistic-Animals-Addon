{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.raa.chicken.move": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [ "idle", "look_at_target" ],
					"blend_transition": 0.2,
					"transitions": [
						{
							"sleep": "q.is_sleeping"
						},
						{
							"eat": "q.is_grazing"
						},
						{
							"panic": "v.panicking_state == 'panic' && q.modified_move_speed > 0.1"
						},
						{
							"run": "v.panicking_state == 'flee' && q.modified_move_speed > 0.1"
						},
						{
							"walk": "q.modified_move_speed > 0.1"
						}
					]
				},
				"walk": {
					"animations": [
						{ "walk": "q.modified_move_speed" },
						"look_at_target"
					],
					"transitions": [
						{
							"sleep": "q.is_sleeping"
						},
						{
							"eat": "q.is_grazing"
						},
						{
							"idle": "!(q.modified_move_speed > 0.1)"
						},
						{
							"panic": "v.panicking_state == 'panic' && q.modified_move_speed > 0.1"
						},
						{
							"run": "v.panicking_state == 'flee' && q.modified_move_speed > 0.1"
						}
					],
					"blend_transition": 0.2
				},
				"run": {
					"animations": [
						{ "run": "q.modified_move_speed" },
						"look_at_target"
					],
					"transitions": [
						{
							"sleep": "q.is_sleeping"
						},
						{
							"eat": "q.is_grazing"
						},
						{
							"idle": "!(q.modified_move_speed > 0.1)"
						},
						{
							"walk": "q.modified_move_speed > 0.1 && v.panicking_state == 'none'"
						},
						{
							"panic": "q.modified_move_speed > 0.1 && v.panicking_state == 'panic'"
						}
					],
					"blend_transition": 0.2
				},
				"panic": {
					"animations": [ "fly", "look_at_target" ],
					"transitions": [
						{
							"sleep": "q.is_sleeping"
						},
						{
							"eat": "q.is_grazing"
						},
						{
							"idle": "!(q.modified_move_speed > 0.1)"
						},
						{
							"run": "v.panicking_state == 'flee' && q.modified_move_speed > 0.1"
						},
						{
							"walk": "q.modified_move_speed > 0.1 && v.panicking_state == 'none'"
						}
					],
					"blend_transition": 0.2
				},
				"eat": {
					"animations": [ "eat" ],
					"blend_transition": 0.2,
					"transitions": [
						{
							"idle": "q.all_animations_finished"
						}
					]
				},
				"sleep": {
					"animations": [ "sleep" ],
					"blend_transition": 0.2,
					"particle_effects": [
						{
							"effect": "sleep"
						}
					],
					"transitions": [
						{
							"idle": "!q.is_sleeping"
						}
					]
				}
			}
		}
	}
}