{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "raa:feather_particle",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/raa/particles/feather_particle"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 8
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.2
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [0, 0.6, 0],
				"radius": 0.2,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "1.8 + variable.particle_random_1 * 2.0"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "variable.particle_random_1 * 360",
				"rotation_rate": "(variable.particle_random_2 - 0.5) * 200"
			},
			"minecraft:particle_initial_speed": "0.4 + variable.particle_random_3 * 1.2",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.sin(variable.particle_age * 5.0 + variable.particle_random_1 * 6.28318) * 0.15", -1.8, "math.cos(variable.particle_age * 5.0 + variable.particle_random_2 * 6.28318) * 0.15"],
				"linear_drag_coefficient": 1.2,
				"rotation_drag_coefficient": 0.4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.14 + 0.04 * variable.particle_random_1", "0.22 + 0.08 * variable.particle_random_2"],
				"facing_camera_mode": "direction_y",
				"direction": {
					"mode": "custom_direction",
					"custom_direction": [0, 1, 0]
				},
				"uv": {
					"texture_width": 16,
					"texture_height": 16,
					"uv": [0, 0],
					"uv_size": [8, 8]
				}
			},
			"minecraft:particle_motion_collision": {
				"coefficient_of_restitution": 0.1,
				"collision_radius": 0.1,
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_lighting": {}
		}
	}
}